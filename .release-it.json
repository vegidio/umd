{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "types": [
                {
                    "type": "feat",
                    "section": "Features"
                },
                {
                    "type": "fix",
                    "section": "Bug Fixes"
                },
                {
                    "type": "refactor",
                    "section": "Improvements"
                }
            ]
        }
    },
    "git": {
        "requireCleanWorkingDir": false,
        "commit": false,
        "tag": false,
        "push": false
    },
    "increment": false
}